# Real Estate Tracker Environment Variables
# Copy this file to .env and update with your values

# === GENERAL ===
ENVIRONMENT=development
DEBUG=true

# === DATABASE ===
DATABASE_URL=sqlite:///data/tracker.db
# For PostgreSQL (future):
# DATABASE_URL=postgresql://user:password@localhost:5432/real_estate_tracker

# === SECURITY ===
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY_MINUTES=15
ENCRYPTION_KEY=your-encryption-key-for-sensitive-data

# === API ===
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_WORKERS=1

# === FRONTEND ===
VITE_API_URL=http://localhost:8000
VITE_APP_NAME="Real Estate Tracker"
VITE_APP_VERSION=2.0.0

# === EMAIL (Development) ===
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@realestate-tracker.local

# === REDIS (Future) ===
# REDIS_URL=redis://localhost:6379/0

# === LOGGING ===
LOG_LEVEL=INFO
LOG_FORMAT=json

# === CORS ===
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
CORS_ALLOW_CREDENTIALS=true

# === RATE LIMITING ===
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# === FILE UPLOAD ===
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf,csv,xlsx

# === BACKUP ===
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30

# === MONITORING (Future) ===
# SENTRY_DSN=https://your-sentry-dsn
# PROMETHEUS_ENABLED=true
# METRICS_PORT=9090