{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:9876",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Real Estate Tracker",
    "version": "0.2.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "execute": true,
        "sidecar": false,
        "open": false
      },
      "fs": {
        "all": false,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "copyFile": false,
        "createDir": true,
        "removeDir": false,
        "removeFile": false,
        "renameFile": false,
        "exists": true,
        "scope": ["$APPDATA/real-estate-tracker/**", "$HOME/.real-estate-tracker/**"]
      },
      "dialog": {
        "all": false,
        "ask": true,
        "confirm": true,
        "message": true,
        "open": true,
        "save": true
      },
      "notification": {
        "all": true
      },
      "path": {
        "all": true
      },
      "globalShortcut": {
        "all": false
      },
      "clipboard": {
        "all": false,
        "readText": false,
        "writeText": false
      },
      "http": {
        "all": false,
        "request": false
      }
    },
    "bundle": {
      "active": true,
      "category": "Productivity",
      "copyright": "Copyright Â© 2025 Real Estate Tracker Team. All rights reserved.",
      "deb": {
        "depends": ["python3", "python3-pip"]
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.realestatetracker.app",
      "longDescription": "A comprehensive house flipping budget tracker with room-by-room expense tracking, budget analysis, and financial reporting.",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "Professional house flipping budget tracker",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost data:; script-src 'self'; style-src 'self' 'unsafe-inline'; connect-src ipc: https://ipc.localhost"
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 900,
        "resizable": true,
        "title": "Real Estate Tracker",
        "width": 1400,
        "minWidth": 1000,
        "minHeight": 700,
        "center": true,
        "theme": "Light"
      }
    ],
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    }
  }
} 